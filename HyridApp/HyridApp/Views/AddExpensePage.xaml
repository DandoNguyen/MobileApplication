<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HyridApp.Views.AddExpensePage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Margin="10">
            <Entry x:Name="entry_type" Placeholder="Type of Expense"/>
            <Entry x:Name="entry_amount" Placeholder=" VND" Keyboard="Numeric" />
            <StackLayout Orientation="Horizontal">
                <DatePicker x:Name="datePicker"/>
                <TimePicker x:Name="timePicker"/>
            </StackLayout>
            <Entry x:Name="entry_comment" Placeholder="Comment ..."/>
            <Button Text="Save Expense" CornerRadius="15" HorizontalOptions="Fill" BackgroundColor="CornflowerBlue" TextColor="White"
                    Clicked="btn_Save_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>